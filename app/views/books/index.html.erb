
<div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>

<table class="table"><tr>
<td class="col-md-6"><%= link_to "フォロー数: #{current_user.follower.count}","/users/following/#{current_user.id}" %></td>
<td><%= link_to "フォロワー数: #{current_user.followed.count}","/users/follower/#{current_user.id}" %></td>
</tr></table>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Books index</h2>
		<!--books一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="5"></th>
				</tr>
			</thead>

			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td>
						<%= link_to(book.user) do %>
						<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
						<% end %>
					</td>
					<td><%= link_to book.title, book, class: "book_#{book.id}" %></td>
					<td><%= book.body %></td>
					<td>
						<% if current_user.already_favorited?(book) %>
						<%= link_to book_favorites_path(book), method: :delete do %>
						<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
						<%= book.favorites.count %>
						<% end %>
						<% else %>
						<%= link_to book_favorites_path(book), method: :post do %>
						<i class="fa fa-heart" aria-hidden="true" style="color: black;"></i>
						<%= book.favorites.count %>
						<% end %>
						
					</td>
					<% end %>
					<td>
						<i class="inline-meta">

						
								<%= link_to "コメント数:#{book.book_comments.count}", book_path(book.id), style: "list-style: none;" %>
							
						</i>
					</td>
</tr>
					<% end %>
				</tbody>
			</table>

		


		</div>
	</div>