
						<% book_comments.each do |book_comment| %>
						<%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg", style: "margin-top: 20px; margin-right:20px;") %>
						<%= book_comment.comment %>
						<% if book_comment.user == current_user%>
						<%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn btn-danger pull-right" %>
						<% end %><br>						
						<% end %>
											<div class="col-xs-9">
					<%= form_with model: [book, book_comment], url: "/books/#{book.id}/book_comments", method: :post do |f| %>
					<%= f.text_area :comment, rows:'5', class: "form-control", style: "margin-top: 20px;",placeholder: "コメントをここに" %>
					<%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
					<% end %>
				</div>


