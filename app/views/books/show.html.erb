
<div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
			<tr>
				<td>
					<%= link_to (@book.user) do %>
					<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
					<%= @user.name %>
					<% end %>
				</td>
				<td><%= link_to @book.title, @book %></td>
				<td><%= @book.body %></td>
				<% if @book.user == current_user %>
				<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
				<td><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
				<% end %>
				<td>
					<% if current_user.already_favorited?(@book) %>
					<%= link_to book_favorites_path(@book), method: :delete do %>
					<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
					<%= @book.favorites.count %>
					<% end %>
					<% else %>
					<%= link_to book_favorites_path(@book), method: :post do %>
					<i class="fa fa-heart" aria-hidden="true" style="color: black;"></i>
					<%= @book.favorites.count %>
					<% end %>
					<% end %>
				</td>
				<td>
					<i class="inline-meta">

						
						<%= link_to "コメント数:#{@book.book_comments.count}", book_path(@book.id) %>

					</i>
				</td>


				
				<div class="col-xs-9">
					<table class="table">
						<% @book.book_comments.each do |book_comment| %>


						<%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg", style: "margin-top: 20px;") %>

						<%= book_comment.comment %>
						<% if book_comment.user == current_user%>

						<%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger pull-right" %>

						<% end %><br>
						
						<% end %>
					</div>
				</tr>



			</div>
			<%= form_for [@book, @book_comment] do |f| %>

			<div class="col-xs-9">
				<%= f.text_area :comment, rows:'5', class: "form-control", style: "margin-top: 20px;",placeholder: "コメントをここに" %>


				<%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
				<% end %>
			</div>


